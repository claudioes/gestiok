<form
    id="comments-form"
    action="{{ path_for('comment.store', {model_type: model_type, model_id: model_id}) }}"
    method="post"
    autocomplete="off">

    {{ csrf_field() }}

    <div class="form-group">
        <label class="sr-only">{{ __('Message') }}</label>
        <div class="input-group">
            <input
                type="text"
                name="message"
                id="comment-message"
                class="form-control"
                placeholder="{{ __('Write your message here') }}"
                required>

            <span class="input-group-btn">
                <button type="submit" class="btn btn-sucess">
                    <i class="fa fa-send"></i>
                    {{ __('Send') }}
                </button>
            </span>
        </div>
    </div>
</form>
