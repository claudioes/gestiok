{% extends 'layouts/app.twig' %}

{% block js %}
    <script>
        $(function() {
            App.initForm();
        });
    </script>
{% endblock %}

{% block title %}
    {{ __('Editing product') }}
{% endblock %}

{% block toolbar_left %}
    <a href="{{ path_for('product.view', {product: product.id}) }}" class="btn btn-default">
        <i class="fa fa-arrow-left"></i>
        {{ __('Back') }}
    </a>
{% endblock %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-body">
            <form id="form" class="form-horizontal" action="{{ path_for('product.update', {product: product.id}) }}" method="post" autocomplete="off">
                {{ csrf_field() }}

                <input type="hidden" name="_METHOD" value="PUT">

                {% include 'product/partials/form.twig' %}

                <div class="row">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-success">
                            <i class="fa fa-check"></i>
                            {{ __('Save') }}
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
