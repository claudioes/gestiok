<form id="filter-form">
    <div class="form-group">
        <label for="filter-name" class="control-label">
            {{ __('Name') }}
        </label>
        <input type="text" id="filter-name" name="name" value="{{ params.name }}" class="form-control">
    </div>

    <div class="form-group">
        <label for="filter-email" class="control-label">
            {{ __('Email') }}
        </label>
        <input type="text" id="filter-email" name="email" value="{{ params.email }}" class="form-control">
    </div>

    <div class="form-group">
        <label for="filter-status" class="control-label">
            {{ __('Status') }}
        </label>
        <select id="filter-status" name="status" class="form-control">
            <option value="active" {{ params.status in ['', 'active'] ? 'selected' }}>
                {{ __('Active') }}
            </option>
            <option value="inactive" {{ params.status == 'inactive' ? 'selected' }}>
                {{ __('Inactive') }}
            </option>
            <option value="all" {{ params.status == 'all' ? 'selected' }}>
                {{ __('All') }}
            </option>
        </select>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="pull-right">
                <button type="submit" class="btn btn-default">
                    <i class="fa fa-search"></i>
                    {{ __('Search') }}
                </button>
            </div><!-- pull-right -->

            <button type="button" class="btn btn-default" id="btn-clear">
                {{ __('Clear') }}
            </button>
        </div><!-- col -->
    </div><!-- row -->
</form>
