{% extends 'layouts/app.twig' %}

{% block js %}
    <script>
        $(function() {
            $('.input-group.date').datepicker();

            var $roles = $('#roles').selectize({
                plugins: ['remove_button'],
                closeOnSelect: true,
            });

            App.initForm();
        });
    </script>
{% endblock %}

{% block title %}
    {{ __('Creating user') }}
{% endblock %}

{% block toolbar_left %}
    <a href="{{ path_for('user.index') }}" class="btn btn-default">
        <i class="fa fa-arrow-left"></i>
        {{ __('Back') }}
    </a>
{% endblock %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-body">
            <form id="form" class="form-horizontal" action="{{ path_for('user.store') }}" method="post" autocomplete="off" enctype="multipart/form-data">
                {{ csrf_field() }}

                {% include 'user/partials/form.twig' %}

                <div class="row">
                    <div class="col-sm-10 col-sm-offset-2">
                        <button type="submit" class="btn btn-success">
                            <i class="fa fa-check"></i>
                            {{ __('Save') }}
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
