{% if flash.getMessage('success') %}
    <div class="alert alert-success alert-dismissable" role="alert" id="flash-success-alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        {{ flash.getMessage('success')|first|raw }}
    </div>
{% endif %}

{% if flash.getMessage('error') %}
    <div class="alert alert-danger alert-dismissable" role="alert" id="flash-error-alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        {{ flash.getMessage('error')|first|raw }}
    </div>
{% endif %}
